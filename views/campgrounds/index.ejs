<%- layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<p><a href="/campgrounds/new">Create campground</a></p>
<% for(let camp of campgrounds){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" crossorigin="anonymous" src=<%- camp.images[0].url %>  alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %> </h5>
                    <p class="card-text"><%= camp.description %> </p>
                    <p class="card-text text-muted"><%= camp.location %> </p>
                    <a href="/campgrounds/<%- camp._id %>" class="btn btn-primary">View <%= camp.title %> </a>
                </div>
            </div>
        </div>
    </div>
<% } %>
<script>
    const mapToken = '<%-process.env.MAPTILER_API_KEY%>';
    const camps = { features: <%-JSON.stringify(campgrounds)%> }
</script>

<script src="/js/clusterMap.js"></script>